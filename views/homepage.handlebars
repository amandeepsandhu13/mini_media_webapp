<h2>Latest posts</h2>
<p><a href="/login">Login</a> to add more posts and connect with users</p>
<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
     <p>Created by {{post.user.name}} on {{project.date}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.post_contents}}
    </p>
  </div>
</div>
{{/each}}
