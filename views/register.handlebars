<div class="row">
  <div class="col s12 m8 offset-m2">
    <div class="card-panel">
      <h4 class="center-align">Register</h4>
      <form id="register-form" method="POST" action="/api/users/register">
        <div class="row">
          <div class="input-field col s12">
            <input
              type="text"
              id="name"
              name="name"
              class="validate"
              required
            />
            <label for="name">Name</label>
          </div>
          <div class="input-field col s12">
            <input
              type="email"
              id="email"
              name="email"
              class="validate"
              required
            />
            <label for="email">Email</label>
          </div>
          <div class="input-field col s12">
            <input
              type="text"
              id="username"
              name="username"
              class="validate"
              required
            />
            <label for="username">Username</label>
          </div>
          <div class="input-field col s12">
            <input
              type="password"
              id="password"
              name="password"
              class="validate"
              required
            />
            <label for="password">Password</label>
          </div>
          <div class="input-field col s12">
            <input
              type="text"
              id="DOB"
              name="DOB"
              class="datepicker"
              required
            />
            <label for="DOB">Date of Birth</label>
          </div>
          <div class="input-field col s12 m6">
            <select id="gender" name="gender" class="validate" required>
              <option value="" disabled selected>Select your gender</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>
            <label for="gender">Gender</label>
          </div>
          <div class="input-field col s12 m6">
            <textarea
              id="bio"
              name="bio"
              class="materialize-textarea"
            ></textarea>
            <label for="bio">Bio</label>
          </div>
        </div>
        <div class="center-align">
          <button
            class="btn waves-effect waves-light blue"
            type="submit"
          >Register</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/register.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function() { var elems =
  document.querySelectorAll('.datepicker'); M.Datepicker.init(elems, { format:
  'yyyy-mm-dd' }); var elems = document.querySelectorAll('select');
  M.FormSelect.init(elems); });
</script>